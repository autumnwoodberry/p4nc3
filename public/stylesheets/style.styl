@import 'normalize.css'
@import url(http://fonts.googleapis.com/css?family=Open\+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800);
@import 'nib'

black = #444
shadow = #bbb

// BASIC
html, body
  height 100%
body
  background #d6ebff
  color black
header
  background white
  padding 0.5em
  box-shadow 0px 1px 2px shadow
  .version
    font-size 11px
main
  font-family Open Sans, sans-serif
  padding 0.5em
.content
  max-width 400px
  margin 0 auto
nav
  width 100%
  margin-top 0.5em
  position relative
  bottom 0
  text-align center
  box-shadow 0px 1px 2px shadow
  border-radius 0.5em
  margin-bottom 0.5em
  overflow: hidden
  button
    background white
    border none
    width 100%
    width 50%
    height 50px
  button:active
    background #eee
  #next
    border-left 1px solid #ddd

.meta
  font-size 11px
  text-transform lowercase
  text-align center

// APPLICATION
.card
  position relative
  height 300px
  cursor pointer

.front, .back
  font-size: 1.5em
  position: absolute;
  top 0
  left 0
  width 100%
  height 300px
  backface-visibility hidden
  transition transform 0.3s
  background white
  border-radius 0.5em
  box-shadow 0px 1px 2px shadow
  p
    padding 0.75em
    margin 0
    text-align center

.back
  transform rotateY(-180deg)

.card.flip .front
  transform rotateY(-180deg)

.card.flip .back
  transform rotateY(0)
