@import 'normalize.css'
@import url(http://fonts.googleapis.com/css?family=Open\+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800);
@import url(http://fonts.googleapis.com/css?family=Coming\+Soon);
@import 'nib'

black = #444
shadow = #bbb

// BASIC
html, body
  height 100%

body
  background #d6ebff
  color black

header
  background white
  padding 0.5em
  box-shadow 0px 1px 2px shadow

  .version
    font-size 11px

main
  font-family Open Sans, sans-serif
  padding 0.5em

.content
  max-width 450px
  margin 0 auto

nav, .options
  button
    box-shadow 0px 1px 2px shadow
    border-radius 0.5em
    background white
    border none
    // width 100%
    height 50px
    margin-top: 0.5em
  button:active
    background #eee

nav
  button
    width 100%

.options
  text-align center
  button
    color #ccc
    + button
      margin-left 0.5em
    padding-left 1em
    padding-right 1em
    text-align left
    i
      margin-right 1em
    .fa-times
        color #ccc

    .fa-check
        color #00CC66
  button.check
    color #333

.meta
  font-size 11px
  text-transform lowercase
  text-align center

.front, .back
  font-size 1.5em
  background white
  border-radius 0.5em
  box-shadow 0px 1px 2px shadow

  p
    padding 0.75em
    margin 0
    text-align center
    font-family Coming Soon

.flip
  perspective 1000

.flip.hover .card
  transform rotateY(180deg)

.flip, .front, .back
  width 100%
  height 300px

.card
  transition 0.6s
  transform-style preserve-3d
  position relative
  cursor pointer

.front, .back
  backface-visibility hidden
  position absolute
  top 0
  left 0

.front
  z-index 2
  transform rotateY(0deg)

.back
  transform rotateY(180deg)

.fa.fa-bars
  float right
  cursor pointer

.settings-menu
  display none
