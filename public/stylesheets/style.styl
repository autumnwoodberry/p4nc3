@import 'normalize.css'
@import url(http://fonts.googleapis.com/css?family=Open\+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800);
@import 'nib'

black = #444
shadow = #bbb

// BASIC
html, body
  height 100%
body
  background #d6ebff
  color black
header
  background white
  padding 0.5em
  box-shadow 0px 1px 2px shadow
  .version
    font-size 11px
main
  font-family Open Sans, sans-serif
  padding 0.5em
.content
  max-width 400px
  margin 0 auto
nav
  text-align center
  button
    background white
    border none
    width 100%
    border-radius 0.5em
    box-shadow 0px 1px 2px shadow
    margin-bottom .5em
    width 50%
  button:active
    background #eee
  #next
    border-top-left-radius 0
    border-bottom-left-radius 0
  #previous
    border-top-right-radius 0
    border-bottom-right-radius 0

// APPLICATION
.card
  position relative

.front, .back
  font-size: 1.5em
  position: absolute;
  top 0
  left 0
  width 100%
  height 100%
  backface-visibility hidden
  transition transform 0.3s
  p
    padding 0.75em
    margin 0
    background white
    border-radius 0.5em
    box-shadow 0px 1px 2px shadow
    text-align center

.back
  transform rotateY(-180deg)

.card:hover .front
  transform rotateY(-180deg)

.card:hover .back
  transform rotateY(0)
